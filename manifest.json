{
    "manifest_version": 3,
    "name": "Share 2 Archive Webpage Today",
    "version": "2.4",
    "description": "Publicly archive any website using the archive.today, archive.is, archive.ph service",
    "permissions": [
      "tabs", "contextMenus"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
  